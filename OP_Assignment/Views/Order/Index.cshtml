@model OP_Assignment.Models.Order
@{
    ViewBag.Title = "Order Processing";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Order Processing System</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("Calculate", "Order")">
                        <div class="form-group">
                            <label class="fw-bold">Order Amount ($)</label>
                            <input type="number" name="OrderAmount" class="form-control" required placeholder="Enter order amount" min="1" />
                        </div>
                        <div class="form-group mt-3">
                            <label class="fw-bold">Customer Type</label>
                            <select name="CustomerType" class="form-control">
                                <option value="New">New Customer</option>
                                <option value="Loyal">Loyal Customer</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4 w-100">Calculate</button>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">Discount applies for loyal customers on orders over $100</small>
                </div>
            </div>
        </div>
    </div>
</div>
